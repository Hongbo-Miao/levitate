{
  "name": "@grafana/poc3",
  "version": "0.0.1",
  "private": true,
  "description": "An experimental tool for helping to understand APIs used by plugins and detecting breaking changes.",
  "main": "src/index.ts",
  "bin": {
    "poc3": "dist/index.js"
  },
  "scripts": {
    "build": "tsc ./src/bin.ts --m commonjs --outDir ./dist --esModuleInterop",
    "dev": "tsc-watch ./src/bin.ts --m commonjs --outDir ./dist --esModuleInterop",
    "dev-compare": "nodemon --exec yarn run dev:compare",
    "dev-imports": "nodemon --exec yarn run dev:imports",
    "dev-gobble": "nodemon --exec yarn run dev:gobble",
    "dev:compare": "run-s build fixtures:compare",
    "dev:imports": "run-s build fixtures:imports",
    "dev:gobble": "run-s build fixtures:gobble",
    "fixtures:compare": "DEBUG=* node ./dist/bin.js compare --prev-package ./fixtures/compare/bundle-old.ts --current-package ./fixtures/compare/bundle-new.ts",
    "fixtures:imports": "DEBUG=* node ./dist/bin.js list-imports --path ./fixtures/imports/package/src/module.ts --filters @grafana/ui @grafana/data",
    "fixtures:gobble": "DEBUG=*:simple-git node ./dist/bin.js gobble --repositories 'https://github.com/grafana/clock-panel' 'https://github.com/alexanderzobnin/grafana-zabbix' --filters @grafana/ui @grafana/data @grafana/runtime"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "workspaces": [
    "./fixtures/imports/**",
    "poc3-bq"
  ],
  "dependencies": {
    "@grafana/ui": "^8.2.5",
    "chalk": "^4.1.2",
    "cli-table": "^0.3.11",
    "colors": "^1.4.0",
    "debug": "^4.3.2",
    "diff": "^5.0.0",
    "execa": "^5.1.1",
    "fast-glob": "^3.2.7",
    "indent-string": "^5.0.0",
    "node-fetch": "^2.6.6",
    "ora": "5.4.1",
    "print-diff": "^1.0.0",
    "rimraf": "^3.0.2",
    "simple-git": "^2.48.0",
    "tar": "^6.1.11",
    "tar-fs": "^2.1.1",
    "tty-table": "^4.1.5",
    "typescript": "^4.5.2",
    "yargs": "^17.2.1"
  },
  "devDependencies": {
    "@types/node": "^16.11.10",
    "@types/yargs": "^17.0.7",
    "nodemon": "^2.0.15",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.5.0",
    "tsc-watch": "^4.5.0"
  },
  "nodemonConfig": {
    "watch": [
      "*.ts",
      "*.tsx",
      "package.json"
    ],
    "ext": "*",
    "ignore": [
      "repos/*"
    ],
    "events": {
      "start": "cls || clear"
    }
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/grafana/poc3.git"
  },
  "bugs": {
    "url": "https://github.com/grafana/poc3/issues"
  },
  "homepage": "https://github.com/grafana/poc3#readme"
}
